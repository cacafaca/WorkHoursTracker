<Window x:Name="configWindow"
        x:Class="ProCode.WorkHoursTracker.Views.ConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProCode.WorkHoursTracker.Views"
        mc:Ignorable="d"
        Title="Config"
        Height="107"
        Width="188"
        WindowStartupLocation="CenterScreen"
        MinHeight="180"
        MinWidth="250"
        xmlns:vm="clr-namespace:ProCode.WorkHoursTracker.ViewModels">
    <Window.DataContext>
        <vm:ConfigViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="Directory with work hours fiels:"
               HorizontalAlignment="Left"
               Margin="9,10,0,0"
               VerticalAlignment="Top"
               Grid.Column="1"
               Height="26"
               Width="173" />
        <TextBox x:Name="workHoursDirectoryTextBox"
                 Margin="9,41,45,0"
                 TextWrapping="NoWrap"
                 Text="{Binding WorkHoursDirectory}"
                 VerticalAlignment="Top"
                 Height="23"
                 Grid.Column="1" />
        <Button x:Name="pickWorkHoursDirectoryButton"
                Content="&gt;&gt;&gt;"
                Margin="0,41,10,0"
                HorizontalAlignment="Right"
                Width="30"
                Height="23"
                VerticalAlignment="Top"
                Command="{Binding SetWorkHoursDirCommand}"
                Grid.Column="1" />
        <Button x:Name="cancelButton"
                Content="Cancel"
                Margin="0,0,10,10"
                Height="20"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="40"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding ElementName=configWindow, Mode=OneWay}"
                Grid.Column="1" />
        <Button x:Name="saveButton"
                Content="Save"
                Margin="0,0,55,10"
                HorizontalAlignment="Right"
                Width="40"
                Height="20"
                VerticalAlignment="Bottom"
                Command="{Binding SaveConfigCommand}"
                CommandParameter="{Binding ElementName=configWindow, Mode=OneWay}"
                Grid.Column="1" />
        <Label Content="Appearance interval"
               HorizontalAlignment="Left"
               Margin="9,69,0,0"
               VerticalAlignment="Top"
               Grid.Column="1"
               Height="26"
               Width="115" />
        <TextBox x:Name="apperianceIntervalTextBox"
                 HorizontalAlignment="Left"
                 Margin="129,72,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="55"
                 Height="23"
                 Text="{Binding TimerIntervalInMinutes}"
                 Grid.Column="1" />
    </Grid>
</Window>

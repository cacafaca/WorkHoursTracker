<Window x:Name="configWindow"
        x:Class="ProCode.WorkHoursTracker.Views.ConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProCode.WorkHoursTracker.Views"
        mc:Ignorable="d"
        Title="Config"
        Height="115"
        Width="190"
        WindowStartupLocation="CenterScreen"
        MinHeight="180"
        MinWidth="250"
        xmlns:vm="clr-namespace:ProCode.WorkHoursTracker.ViewModels">
    <Window.DataContext>
        <vm:ConfigViewModel />
    </Window.DataContext>
    <StackPanel Orientation="Vertical"
                Margin="5">
        <Label Content="Directory with work hours files:"
               HorizontalAlignment="Stretch" />
        <DockPanel FlowDirection="LeftToRight"
                   LastChildFill="True">
            <TextBox x:Name="workHoursDirectoryTextBox"
                     TextWrapping="NoWrap"
                     Text="{Binding WorkHoursDirectory}"
                     HorizontalAlignment="Stretch"
                     TabIndex="0" />
            <Button x:Name="pickWorkHoursDirectoryButton"
                    Content="&gt;&gt;&gt;"
                    HorizontalAlignment="Right"
                    Command="{Binding SetWorkHoursDirCommand}"
                    TabIndex="1"
                    Margin="10,0,0,0" />
        </DockPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Appearance interval"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
            <TextBox x:Name="apperianceIntervalTextBox"
                     HorizontalAlignment="Left"
                     TextWrapping="NoWrap"
                     VerticalAlignment="Center"
                     Text="{Binding TimerIntervalInMinutes}"
                     TabIndex="2" />
            <Label Content="min"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Visibility interval"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
            <TextBox HorizontalAlignment="Left"
                     TextWrapping="NoWrap"
                     Text="{Binding VisibilityIntervalInSeconds}"
                     VerticalAlignment="Center" />
            <Label Content="sec"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="cancelButton"
                    Content="Cancel"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding ElementName=configWindow, Mode=OneWay}"
                    TabIndex="4"
                    Width="50" />
            <Button x:Name="saveButton"
                    Content="Save"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding SaveConfigCommand}"
                    CommandParameter="{Binding ElementName=configWindow, Mode=OneWay}"
                    Width="50"
                    Margin="10,0,0,0" />
        </StackPanel>
    </StackPanel>
</Window>
